{
  "version": 2,
  "public": true,
  "headers": [
    {
      "source": "/(.*).js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "env": {
    "API_BASE_URL": "https://xen-platform.vercel.app"
  },
  "build": {
    "env": {
      "API_BASE_URL": "@api-base-url"
    }
  }
}